type User {
  id: ID! @id
  username: String!
  password: String!
}

type Supplier{
  id: ID! @id
  name: String!
  phone: String
  address: String
  amounttotake: Float
  amounttopay: Float
  paid: [PaidDetail!]!
}

type PaidDetail{
  id: ID! @id
  createdAt : DateTime @createdAt
  description : String
  amounttopay: Float
  amountpaid : Float!
  amountlefttopay: Float
  amounttotake:Float
  amounttaken:Float
  amountlefttotake:Float
  supplier:Supplier!
}

type LineItem{
  id: ID! @id
  name: String! @unique
}

type Category{
  id: ID! @id
  name: String!
  lineitem:LineItem!
}

type Product{
  id: ID! @id
  barcode: String! @unique
  name: String!
  sellPrice: Int
  wholesalePrice: Int
  category:Category!
  stock:[StockItem!]!
}

type StockItem{
  id: ID! @id
  createdAt: DateTime! @createdAt
  badgeNumber: String
  noofpieces: Int!
  buyPrice: Float!
  sellPrice: Float!
  wholesalePrice: Float!
  expiry: DateTime
  product: Product!
  supplier:Supplier!
}

type Sales{
  id: ID! @id
  createdAt: DateTime! @createdAt
  product:Product!
  noofpieces:Int!
  buyPrice:Float!
  sellPrice:Float!
  profit:Float!
}

type Expense{
  id: ID! @id
  createdAt: DateTime! @createdAt
  description: String!
  price: Float!
}