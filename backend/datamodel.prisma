type User {
  id: ID! @id
  username: String!
  password: String!
}

type Supplier{
  id: ID! @id
  name: String!
  phone: String
  address: String
  debtleft: Int
  paid: [PaidDetail!]!
}

type PaidDetail{
  id: ID! @id
  createdAt : DateTime @createdAt
  description : String
  amounttopay: Int
  amountpaid : Int!
  debtleftatpoint: Int
  supplier:Supplier!
}

type LineItem{
  id: ID! @id
  name: String!
}

type Category{
  id: ID! @id
  name: String!
  lineitem:LineItem!
}

type Product{
  id: ID! @id
  barcode: String! @unique
  name: String!
  sellPrice: Int
  wholesalePrice: Int
  category:Category!
  stock:[StockItem!]!
}

type StockItem{
  id: ID! @id
  createdAt: DateTime! @createdAt
  badgeNumber: String
  noofpieces: Int!
  buyPrice: Float!
  sellPrice: Float!
  wholesalePrice: Float!
  expiry: DateTime
  product: Product!
}
